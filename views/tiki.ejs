<!-- views/tiki.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tiki Form</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="div-contrainer m-50 p-5">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Tiki Form</h1>
            <form action="/tiki" method="post">
                <div class="form-group">
                    <label for="keyword">Search Keyword:</label>
                    <input type="text" class="form-control" id="keyword" name="keyword" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity (must be greater than 0):</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" min="1" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="container mt-5">
            <h1 class="text-center mb-4">Sendo Form</h1>
            <form action="/sendo" method="post">
                <div class="form-group">
                    <label for="keyword">Search Keyword:</label>
                    <input type="text" class="form-control" id="keyword" name="keyword" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Quantity (must be greater than 0):</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" min="1" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS (optional, if you need JavaScript components) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>